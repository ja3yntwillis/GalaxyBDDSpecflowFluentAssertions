@{
    ViewData["Title"] = "Environment List";
}

@using TestRunner.UI.ViewModels
@model RunListVM

@section AddedStyles
{
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/vanilla-dataTables.min.css" />
    <script type="text/javascript" src="~/js/vanilla-dataTables.min.js"></script>
}

<div class="seGrid sidebar2">
    <div id="breadCrumbNav">
        <div id="breadCrumbContainer">
            <ul class="breadcrumb">
                <li><a href="/Home">Home</a></li>
                <li>Daily Report</li>
            </ul>
        </div>
    </div>
</div>

<div class="seGrid content">
    <div id="runs">
        <table id="urlsTable" class="urlsTable stripe hover row-border">
            <thead>
                <tr>
                    <th>Label Name</th>
                    <th>Total</th>
                    <th>Passed</th>
                    <th>Not Started</th>
                    <th>Failed</th>
                    <th>Run Url</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var run in Model.Runs)
                {
                <tr>
                    <td>@run.Labels</td>
                    <td>@run.TestsCount</td>
                    <td>@run.PassedCount</td>
                    <td>@(run.TestsCount - (@run.PassedCount + @run.FailedCount))</td>
                    <td>@run.FailedCount</td>
                        <td><a href="https://automation-dashboard.participantportal.com/RunResult/@run.RunId">@run.RunId</a>
                        </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
    {
    <script>
        var dataTable = new DataTable("#urlsTable", {
            columns: [
                { select: 1, sort: "asc" },
            ],
            perPage: 20,
        });
    </script>
}
