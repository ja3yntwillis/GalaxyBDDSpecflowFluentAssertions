@{
    ViewData["Title"] = "Application Settings";
}

@section AddedStyles
{
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/applicationSettings.css" />
}

<div class="seGrid sidebar2">
    <div id="breadCrumbNav">
        <div id="breadCrumbContainer">
            <ul class="breadcrumb">
                <li><a href="/Home">Home</a></li>
                <li>Application Settings</li>
            </ul>
        </div>
    </div>
</div>
<div class="seGrid content">
    <div id="contentWrapper">
        <div id="leftcontainer">
            <fieldset class="appSettingsFieldset">
                <legend class="appSettingLegend">Application Settings</legend>
                <div id="inputWrapper">
                    <div id="inputBlock">
                        <label for="runResultFolder">Run Results Folder Path:</label>
                        <input id="runResultFolder" name="runResultFolder" type="text" />
                    </div>
                </div>
                <div id="inputWrapper">
                    <div id="inputBlock">
                        <label for="testInfoFolder">Test Information Folder Path:</label>
                        <input id="testInfoFolder" name="testInfoFolder" type="text" />
                    </div>
                </div>
                <div id="inputWrapper">
                    <div id="inputBlock">
                        <input id="saveSettingBtn" name="submit" value="Save Settings" type="submit" />
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>

@section Scripts
{
}